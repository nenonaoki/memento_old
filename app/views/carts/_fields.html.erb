<%= render "shared/error_messages", m: @creditcard %>

<dl class="form-group">
  <dt class="col-sm-2"><%= f.label :name %></dt>
  <dd class="col-sm-7"><%= f.text_field :name, class: "form-control" %></dd>
  <dd class="col-sm-3">&nbsp;</dd>
</dl>
<dl class="form-group">
  <dt class="col-sm-2"><%= f.label :number %></dt>
  <dd class="col-sm-7"><%= f.text_field :number, class: "form-control" %></dd>
  <dd class="col-sm-3">&nbsp;</dd>
</dl>
<dl class="form-group">
  <dt class="col-sm-2"><%= f.label :exp_month %></dt>
  <dd class="col-sm-7"><%= f.select :exp_month, (1..12).map { |num| num.to_s.rjust(2, '0') }, class: "form-control" %> / <%= f.select :exp_year, Time.zone.now.year..(Time.zone.now + 20.years).year, class: "form-control" %></dd>
  <dd class="col-sm-3">&nbsp;</dd>
</dl>
<dl class="form-group">
  <dt class="col-sm-2"><%= f.label :cvc %></dt>
  <dd class="col-sm-7"><%= f.text_field :cvc, class: "form-control" %></dd>
  <dd class="col-sm-3">&nbsp;</dd>
</dl>
