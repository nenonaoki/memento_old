<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-sm-2">

    <div class="text-left"><%= link_to "編集", edit_user_path(@user), class: "btn btn-link btn-xs" %></div>
    <p class="text-center"><%= image_tag @user.avatar.url, width: 150, height: 150, class: "img-thumbnail" %></p>
    <p class="text-center"><%= @user.name %></p>
    

  <!-- /-col --></div>
  <div class="col-sm-10">

    <div class="row">
      <% @user.media.each do |medium| %>
        <div class="col-sm-6">
          <%= link_to medium do %>
            <div class="media">
              <div class="media-left">
                <p><%= image_tag medium.poster.thumb.url, width: 160, height: 90, class: "media-object" %></p>
              </div>
              <div class="media-body">
                <p class="media-heading"><%= medium.title %></p>
                <% if @user.tickets.find_by(medium_id: medium.id).activated? %>
                  <span class="glyphicon glyphicon-ok"></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  <!-- /sub-col --></div>
</div>